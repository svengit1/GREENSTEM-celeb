WindowManager:
    MainWindow:
    SecondWindow:

<MainWindow>
    name: "main"
    MDFloatLayout:
        orientation: "vertical"
        Camera:
            id: camera
            resolution: (1920,1080)
            size_hint: (1,1)
            play: False
        MDIconButton:
            pos_hint: {"x":0.05,"y":0}
            icon: 'camcorder-off'
            on_press: camera.play = not camera.play
        MDIconButton:
            icon: 'camera'
            icon_size: "64sp"
            pos_hint: {"x":0.45,"y":-0.02}
            on_press: root.capture_image()

<SecondWindow>
    name: "second"
    FloatLayout:
        MDLabel:
            id: placeholder_label
            pos_hint: {"x":0.5,"y":-0.45}
            text: "Done!, you look like the person on the right.."
        MDIconButton:
            icon: 'undo-variant'
            pos_hint: {"x":0.03, "y":0.9}
            on_release: root.go_back()
        MDBoxLayout:
            orientation: "horizontal"
            BoxLayout:
                orientation: "vertical"
                spacing:0
                size_hint: (1,0.5)
                pos_hint: {"y":0.25}
                Image:
                    id: image1
                    source: root.img_src
                Image:
                    id: image2
                    source: root.processed_img_src
            Image:
                id: image3
                source: root.landmarked_img_src
            MDBoxLayout:
                id: boxTwo
                orientation: "vertical"

